
<div class="container">
<h1>All our flats</h1>
<div class="d-flex justify-content-around">
<% @flats.each do |flat| %>

<div class="col-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url(<%= flat.url %>)"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2"></i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2"></i> $<%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'text-warning' %>
            <%= link_to 'Delete', flat_path(flat), method: :delete, data: {confirm: 'are u sure?'}, class: 'text-danger' %>
          </div>
        </div>
      </div>
<% end %>
</div>
</div>
